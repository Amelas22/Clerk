# Clerk Legal AI System Environment Variables
# Copy this file to .env and fill in your values

# Box API Configuration (Required)
BOX_CLIENT_ID=your_box_client_id
BOX_CLIENT_SECRET=your_box_client_secret
BOX_ENTERPRISE_ID=your_enterprise_id
BOX_JWT_KEY_ID=your_jwt_key_id
BOX_PRIVATE_KEY="-----BEGIN ENCRYPTED PRIVATE KEY-----\n...\n-----END ENCRYPTED PRIVATE KEY-----"
BOX_PASSPHRASE=your_private_key_passphrase

# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key
CONTEXT_LLM_MODEL=gpt-3.5-turbo  # or gpt-4-turbo for better contexts

# Qdrant Configuration
QDRANT_HOST=qdrant  # or localhost for local development
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_API_KEY=  # Optional, but recommended for production
QDRANT_HTTPS=false  # Set to true for production with SSL
QDRANT_TIMEOUT=60
QDRANT_PREFER_GRPC=true  # gRPC is faster for large batches

# Qdrant Docker Configuration
QDRANT_REST_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_CLUSTER_ENABLED=false  # Set to true for HA setup
QDRANT_TELEMETRY_DISABLED=true
QDRANT_LOG_LEVEL=info

# PostgreSQL (for n8n and Langfuse)
POSTGRES_PASSWORD=your_secure_password
POSTGRES_VERSION=15

# n8n Configuration
N8N_ENCRYPTION_KEY=your_n8n_encryption_key
N8N_USER_MANAGEMENT_JWT_SECRET=your_jwt_secret
N8N_HOSTNAME=n8n.yourdomain.com  # or leave empty for localhost

# Open WebUI Configuration
WEBUI_HOSTNAME=chat.yourdomain.com  # or leave empty for localhost

# Flowise Configuration
FLOWISE_USERNAME=admin
FLOWISE_PASSWORD=your_flowise_password
FLOWISE_HOSTNAME=flowise.yourdomain.com  # or leave empty for localhost

# Langfuse Configuration
LANGFUSE_SALT=your_langfuse_salt
ENCRYPTION_KEY=your_encryption_key
NEXTAUTH_SECRET=your_nextauth_secret
CLICKHOUSE_PASSWORD=your_clickhouse_password
MINIO_ROOT_PASSWORD=your_minio_password
LANGFUSE_HOSTNAME=langfuse.yourdomain.com  # or leave empty for localhost

# Neo4j Configuration
NEO4J_AUTH=neo4j/your_neo4j_password
NEO4J_HOSTNAME=neo4j.yourdomain.com  # or leave empty for localhost

# SearxNG Configuration
SEARXNG_HOSTNAME=search.yourdomain.com  # or leave empty for localhost
SEARXNG_UWSGI_WORKERS=4
SEARXNG_UWSGI_THREADS=4

# Caddy Configuration
LETSENCRYPT_EMAIL=your-email@domain.com  # or "internal" for self-signed

# Redis Configuration
REDIS_AUTH=LOCALONLYREDIS

# Optional: Processing Configuration
# CHUNK_SIZE=1200
# CHUNK_OVERLAP=200
# MAX_FILE_SIZE_MB=200

# Optional: Cost Tracking
ENABLE_COST_TRACKING=true
SAVE_COST_REPORTS=true
COST_REPORT_DIRECTORY=logs

# Optional: Legal AI Features
ENABLE_CASE_ISOLATION=true
ENABLE_CITATION_TRACKING=true
ENABLE_DEADLINE_DETECTION=true
ENABLE_HYBRID_SEARCH=true
HYBRID_VECTOR_WEIGHT=0.7
HYBRID_KEYWORD_WEIGHT=0.2
HYBRID_CITATION_WEIGHT=0.1